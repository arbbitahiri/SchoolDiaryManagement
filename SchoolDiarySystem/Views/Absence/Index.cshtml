@{
    ViewBag.Title = "Absences List";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}
@using SchoolDiarySystem.Models
@model IEnumerable<Absences>

<div class="breadcrumbs-area">
    <h3>Absence</h3>
    <ul>
        <li>
            <a href="@Url.Action("Index", "Teacher")">Home</a>
        </li>
        <li>All Absences</li>
    </ul>
</div>
<div class="col-4-xxxl col-12" style="display:contents">
    <div class="card height-auto">
        <div class="card-body">
            <div class="heading-layout1">
                <div class="item-title">
                    <h3>Create an Absence</h3>
                </div>
            </div>
            <form class="new-added-form">
                <div class="row">
                    <div class="col-12 form-group mg-t-8">
                        <p>
                            @Html.ActionLink("Create", "Create", "Absence", null, new { @class = "btn-fill-lg font-normal text-light gradient-pastel-green" })
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>All Absences Data</h3>
            </div>
        </div>
        @using (Html.BeginForm("Index", "Absence", FormMethod.Get))
        {
            <form class="mg-b-20">
                <div class="row gutters-8">
                    <div class="col-4-xxxl col-xl-5 col-lg-3 col-12 form-group">
                        <input type="text" autocomplete="off" name="searchString" placeholder="Search by date ..." class="form-control air-datepicker">
                    </div>
                    <div class="col-4-xxxl col-xl-5 col-lg-3 col-12 form-group">
                        <input type="text" autocomplete="off" name="searchString2" placeholder="Search by student's name ..." class="form-control">
                    </div>
                    <div class="col-1-xxxl col-xl-2 col-lg-3 col-12 form-group">
                        <button type="submit" class="fw-btn-fill btn-gradient-yellow">SEARCH</button>
                    </div>
                </div>
            </form>
        }
        <div class="table-responsive">
            <table class="table display data-table text-nowrap">
                <thead>
                    <tr>
                        <th></th>
                        <th>Date</th>
                        <th>Reasoning</th>
                        <th>Student</th>
                        <th>Class</th>
                        <th>Subject</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td>
                                @Html.DisplayFor(m => item.AbsenceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.AbsenceReasoning)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Student.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Class.ClassNo)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Subject.SubjectTitle)
                            </td>

                            <td>
                                <div class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <span class="flaticon-more-button-of-three-dots"></span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="@Url.Action("Update", "Class", new { id = item.ClassID })"><i class="fas fa-cogs text-dark-pastel-green"></i>Update</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {}