@using SchoolDiarySystem.Models
@model Reviews

@*<div class="dashboard-page-one">*@
    <div class="dashboard-content-one">
        <div class="breadcrumbs-area">
            <h3>Review</h3>
            <ul>
                <li>
                    <a href="index-2.html">Home</a>
                </li>
                <li>Review Comment</li>
            </ul>
        </div>
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>Review Comment</h3>
                    </div>
                </div>
                @using (Html.BeginForm("Review", "Comment", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    <form class="new-added-form">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-12 form-group">
                                <label>Review *</label>
                                @Html.TextAreaFor(m => m.Review, new { @class = "textarea form-control", placeholder = "Last name...", id = "review", autocomplete = "off", style = "margin-top: 0px; margin-bottom: 0px; height: 150px;" })
                                @Html.ValidationMessageFor(m => m.Review, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-xl-4 col-lg-6 col-12 form-group">
                                <label>Select Date *</label>
                                @Html.TextBoxFor(m => m.ReviewDate, new { @class = "form-control air-datepicker", placeholder = "dd/MMMM/yyyy", id = "reveiwDate", autocomplete = "off" })
                                @Html.ValidationMessageFor(m => m.ReviewDate, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 form-group mg-t-8">
                                <input type="submit" value="Review" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
@*</div>*@

@section Scripts {}