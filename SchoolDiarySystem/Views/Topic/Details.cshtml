@{
    ViewBag.Title = "Topic Details";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}
@using SchoolDiarySystem.Models
@model Topics

<div class="dashboard-page-one" style="height: 100%; position:relative;">
    <div class="dashboard-content-one">
        <div class="breadcrumbs-area">
            <h3>Topic</h3>
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Professor")">Home</a>
                </li>
                <li>Topic Details</li>
            </ul>
        </div>
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>Topic</h3>
                    </div>
                </div>
                <div class="single-info-details">
                    <div class="item-content">
                        <div class="header-inline item-header">
                            <h3 class="text-dark-medium font-medium">Details</h3>
                            <div class="header-elements">
                                <ul>
                                    <li><a href="#"><i class="fas fa-print"></i></a></li>
                                    <li><a href="#"><i class="fas fa-download"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <p>@Html.Label("Content", Model.Content.ToString())</p>
                        <div class="info-table table-responsive">
                            <table class="table text-nowrap">
                                <tbody>
                                    <tr>
                                        <td>Date:</td>
                                        <td>@Html.Label(Model.TopicDate.ToString("dd MMMM yyyy"), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Class Time:</td>
                                        <td>@Html.Label(Model.Time.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Class:</td>
                                        <td>@Html.Label(Model.Class.ClassNo.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Subject:</td>
                                        <td>@Html.Label(Model.Subject.SubjectTitle, new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Update", "Topic", routeValues: new { id = Model.TopicID })">
                                                <div class="col-12 form-group mg-t-8">
                                                    <input type="submit" value="Update" class="btn-fill-md text-light bg-dodger-blue" />
                                                </div>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Delete", "Topic", routeValues: new { id = Model.TopicID })">
                                                <div class="col-12 form-group mg-t-8">
                                                    <input type="submit" value="Delete" class="btn-fill-md radius-4 text-light bg-orange-red" />
                                                </div>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Index", "Topic")">
                                                <div class="col-12 form-group mg-t-8">
                                                    <input type="submit" value="Back to List" class="btn-fill-md text-light bg-orange-peel" />
                                                </div>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {}