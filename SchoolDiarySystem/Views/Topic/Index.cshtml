@using SchoolDiarySystem.Models
@model IEnumerable<Topics>

<div class="dashboard-page-one">
    <div class="dashboard-content-one">
        <!-- Breadcubs Area Start Here -->
        <div class="breadcrumbs-area">
            <h3>Topics</h3>
            <ul>
                <li>
                    <a href="index-2.html">Home</a>
                </li>
                <li>All Topics</li>
            </ul>
        </div>
        <!-- Breadcubs Area End Here -->
        <!-- Teacher Table Area Start Here -->
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>All Topics Data</h3>
                    </div>
                </div>
                <form class="mg-b-20">
                    <div class="row gutters-8">
                        <div class="col-4-xxxl col-xl-4 col-lg-3 col-12 form-group">
                            <input type="text" placeholder="Search by Name ..." class="form-control">
                        </div>
                        <div class="col-1-xxxl col-xl-2 col-lg-3 col-12 form-group">
                            <button type="submit" class="fw-btn-fill btn-gradient-yellow">SEARCH</button>
                        </div>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table display data-table text-nowrap">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Content</th>
                                <th>Class</th>
                                <th>Subject</th>
                                <th></th>
                            </tr>
                        </thead>
                        @*<tfoot>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.FirstName)</th>
                                    <th>@Html.DisplayNameFor(m => m.LastName)</th>
                                    <th>@Html.DisplayNameFor(m => m.Gender)</th>
                                    <th>@Html.DisplayNameFor(m => m.City)</th>
                                    <th>@Html.DisplayNameFor(m => m.Qualification)</th>
                                    <th>@Html.DisplayNameFor(m => m.DayofBirth)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.PhoneNo)</th>
                                    <th></th>
                                </tr>
                            </tfoot>*@
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(m => item.TopicDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.Time)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.Content)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.Class.ClassNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.Subject.SubjectTitle)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Update", "Update", new { id = item.TopicID })
                                        @Html.ActionLink("Details", "Details", new { id = item.TopicID })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.TopicID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jquery-->
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <!-- Plugins js -->
    <script src="~/Content/js/plugins.js"></script>
    <!-- Popper js -->
    <script src="~/Content/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- Counterup Js -->
    <script src="~/Content/js/jquery.counterup.min.js"></script>
    <!-- Moment Js -->
    <script src="~/Content/js/moment.min.js"></script>
    <!-- Waypoints Js -->
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <!-- Scroll Up Js -->
    <script src="~/Content/js/jquery.scrollUp.min.js"></script>
    <!-- Full Calender Js -->
    <script src="~/Content/js/fullcalendar.min.js"></script>
    <!-- Chart Js -->
    <script src="~/Content/js/Chart.min.js"></script>
    <!-- Custom Js -->
    <script src="~/Content/js/main.js"></script>
}