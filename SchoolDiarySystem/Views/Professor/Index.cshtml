@{
    ViewBag.Title = "Teacher's Dashboard";
    ViewBag.ViewToShow = "Index";
    ViewBag.ControllerToShow = "Professor";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}
@using SchoolDiarySystem.Models
@model IEnumerable<Students>

        <div class="breadcrumbs-area">
            <h3>@SchoolDiarySystem.Resources.Professor.IndexTexts.TeacherDash</h3>
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Professor")">@SchoolDiarySystem.Resources.Professor.IndexTexts.Home</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-12 col-4-xxxl">
                <div class="row">
                    <div class="col-6-xxxl col-lg-12 col-sm-6 col-12">
                        <div class="dashboard-summery-two">
                            <div class="item-icon bg-light-magenta">
                                <i class="flaticon-classmates text-magenta"></i>
                            </div>
                            <div class="item-content">
                                <div class="item-number"><span class="counter" data-num="@ViewBag.Students">@ViewBag.Students</span></div>
                                <div class="item-title">@SchoolDiarySystem.Resources.Professor.IndexTexts.Student</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Dashboard summery End Here -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card dashboard-card-eleven">
                    <div class="card-body">
                        <div class="heading-layout1">
                            <div class="item-title">
                                <h3>@SchoolDiarySystem.Resources.Professor.IndexTexts.MyStud</h3>
                            </div>
                        </div>
                        <div class="table-box-wrap">
                            @using (Html.BeginForm("Index", "Professor", FormMethod.Get))
                            {
                                <form class="search-form-box">
                                    <div class="row gutters-8">
                                        <div class="col-4-xxxl col-xl-10 col-lg-4 col-12 form-group">
                                            <input type="text" placeholder="@SchoolDiarySystem.Resources.Professor.IndexTexts.SearchBy" name="searchString" class="form-control">
                                        </div>
                                        <div class="col-1-xxxl col-xl-2 col-lg-2 col-12 form-group">
                                            <button type="submit" class="fw-btn-fill btn-gradient-yellow">@SchoolDiarySystem.Resources.Professor.IndexTexts.Search</button>
                                        </div>
                                    </div>
                                </form>
                            }
                            <div class="table-responsive student-table-box">
                                <table class="table display data-table text-nowrap">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>@SchoolDiarySystem.Resources.Professor.IndexTexts.FirstN</th>
                                            <th>@SchoolDiarySystem.Resources.Professor.IndexTexts.LastN</th>
                                            <th>@SchoolDiarySystem.Resources.Professor.IndexTexts.Gender</th>
                                            <th>@SchoolDiarySystem.Resources.Professor.IndexTexts.Class</th>
                                            <th>@SchoolDiarySystem.Resources.Professor.IndexTexts.Parent</th>
                                            <th>@SchoolDiarySystem.Resources.Professor.IndexTexts.DoB</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text-center">
                                                    <div class="form-check">
                                                        <input type="checkbox" class="form-check-input">
                                                        @if (item.Gender == "Male")
                                                        {
                                                            <img src="~/Content/img/figure/student2.png" alt="student">
                                                        }
                                                        else
                                                        {
                                                            <img src="~/Content/img/figure/student3.png" alt="student">
                                                        }
                                                    </div>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => item.FirstName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => item.LastName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => item.Gender)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => item.Class.ClassNo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => item.Parent.FullName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => item.DayofBirth)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

@section Scripts {}