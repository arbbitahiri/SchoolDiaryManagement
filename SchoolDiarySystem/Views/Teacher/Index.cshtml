@{
    ViewBag.Title = "Teacher's List";
    ViewBag.ViewToShow = "Index";
    ViewBag.ControllerToShow = "Teacher";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using SchoolDiarySystem.Models
@model IEnumerable<Teachers>

<div class="breadcrumbs-area">
    <h3>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.TeachList</h3>
    <ul>
        <li>
            <a href="@Url.Action("Index", "Admin")">@SchoolDiarySystem.Resources.Universal.UniversalTexts.Home</a>
        </li>
        <li>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.TeachList</li>
    </ul>
</div>
<div class="col-4-xxxl col-12" style="display:contents">
    <div class="card height-auto">
        <div class="card-body">
            <div class="heading-layout1">
                <div class="item-title">
                    <h3>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.CreateTeach</h3>
                </div>
            </div>
            <form class="new-added-form">
                <div class="row">
                    <div class="col-12 form-group mg-t-8">
                        <p>
                            @Html.ActionLink("Create", "Create", "Teacher", null, new { @class = "btn-fill-lg font-normal text-light gradient-pastel-green" })
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.TeachList</h3>
            </div>
            <div class="dropdown">
                <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                   aria-expanded="false">...</a>
                <div class="dropdown-menu dropdown-menu-right text-center">
                    <a class="dropdown-item" data-toggle="modal" data-target="#right-slide-modal">
                        @SchoolDiarySystem.Resources.Universal.UniversalTexts.Help
                    </a>
                </div>
                <div class="ui-modal-box">
                    <div class="modal-box">
                        <div class="modal right-slide-modal fade" id="right-slide-modal" tabindex="-1"
                             role="dialog" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">@SchoolDiarySystem.Resources.Universal.UniversalTexts.Help</h5>
                                        <button type="button" class="close" data-dismiss="modal"
                                                aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.TeacherHELP
                                        <img src="~/Content/img/Help/Teachers_List.png" alt="logo" />
                                        @SchoolDiarySystem.Resources.Student.Index.IndexTexts.StudentHELP_2
                                        <img src="~/Content/img/Help/List_Options.png" alt="logo" />
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="footer-btn bg-dark-low"
                                                data-dismiss="modal">
                                            @SchoolDiarySystem.Resources.Universal.UniversalTexts.Close
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("Index", "Teacher", FormMethod.Get))
        {
            <form class="mg-b-20">
                <div class="row gutters-8">
                    <div class="col-4-xxxl col-xl-10 col-lg-3 col-12 form-group">
                        <input type="text" autocomplete="off" placeholder="@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.SearchBy" name="searchString" class="form-control">
                    </div>
                    <div class="col-1-xxxl col-xl-2 col-lg-3 col-12 form-group">
                        <button type="submit" class="fw-btn-fill btn-gradient-yellow">@SchoolDiarySystem.Resources.Universal.UniversalTexts.Search</button>
                    </div>
                </div>
            </form>
        }
        <div class="table-responsive">
            <div class="dataTables_wrapper no-footer">
                <table class="table display data-table text-nowrap">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.FirstN</th>
                            <th>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.LastN</th>
                            <th>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.Gender</th>
                            <th>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.City</th>
                            <th>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.DoB</th>
                            <th>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.Email</th>
                            <th>@SchoolDiarySystem.Resources.Teacher.Index.IndexTexts.PhoneNo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.DayofBirth)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.PhoneNo)
                                </td>

                                <td>
                                    <div class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="flaticon-more-button-of-three-dots"></span>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="@Url.Action("Delete", "Teacher", new { id = item.TeacherID })"><i class="fas fa-times text-orange-red"></i>@SchoolDiarySystem.Resources.Universal.UniversalTexts.DeleteLower</a>
                                            <a class="dropdown-item" href="@Url.Action("Update", "Teacher", new { id = item.TeacherID })"><i class="fas fa-cogs text-dark-pastel-green"></i>@SchoolDiarySystem.Resources.Universal.UniversalTexts.UpdateLower</a>
                                        </div>
                                        <div class="modal-box">
                                            <!-- Modal -->
                                            <div class="modal fade" id="standard-modal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Sure?</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">×</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to delete @Html.DisplayFor(m => item.FullName)?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="footer-btn bg-dark-low" data-dismiss="modal">No</button>
                                                            @using (Html.BeginForm("Delete", "Teacher", new { id = item.TeacherID }, FormMethod.Post))
                                                            {
                                                                <input type="submit" value="Yes" class="footer-btn bg-linkedin" />
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <div class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <span class="flaticon-more-button-of-three-dots"></span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" data-toggle="modal" data-target="#standard-modal"><i class="fas fa-download"></i>@SchoolDiarySystem.Resources.Universal.UniversalTexts.DownloadExcel</a>
                                    </div>
                                    <div class="modal-box">
                                        <!-- Modal -->
                                        <div class="modal fade" id="standard-modal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">@SchoolDiarySystem.Resources.Universal.UniversalTexts.DownloadExcel</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        @SchoolDiarySystem.Resources.Universal.UniversalTexts.SureDownload
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="footer-btn bg-dark-low" data-dismiss="modal">@SchoolDiarySystem.Resources.Universal.UniversalTexts.No</button>
                                                        @using (Html.BeginForm("Export", "Student", FormMethod.Post))
                                                        {
                                                            <input type="submit" value="@SchoolDiarySystem.Resources.Universal.UniversalTexts.Download" class="footer-btn bg-linkedin" aria-label="Close" />
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {}