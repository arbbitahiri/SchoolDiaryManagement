@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using SchoolDiarySystem.Models
@model Class

<div class="breadcrumbs-area">
    <h3>Class</h3>
    <ul>
        <li>
            <a href="@Url.Action("Index", "Admin")">Home</a>
        </li>
        <li>Class Details</li>
    </ul>
</div>
<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>Are you sure you want to delete this class?</h3>
            </div>
        </div>
        <div class="single-info-details">
            <div class="item-content">
                <div class="info-table table-responsive">
                    <table class="table text-nowrap">
                        <tbody>
                            <tr>
                                <td>Class :</td>
                                <td>@Html.Label(Model.ClassNo.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                            </tr>
                            <tr>
                                <td>Teacher:</td>
                                <td>@Html.Label(Model.Teacher.FullName, new { @class = "font-medium text-dark-medium" })</td>
                            </tr>
                            <tr>
                                <td>Room:</td>
                                <td>@Html.Label(Model.Room.RoomType, new { @class = "font-medium text-dark-medium" })</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                @using (Html.BeginForm("Delete", "Class", FormMethod.Post))
                {
                    <div class="col-12 form-group mg-t-8">
                        <input type="submit" value="Delete" class="btn-fill-md radius-4 text-light bg-orange-red" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {}