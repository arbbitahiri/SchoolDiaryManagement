@using SchoolDiarySystem.Models
@model Class

<div class="dashboard-page-one" style="position: relative; height: 100%;">
    <div class="dashboard-content-one">
        <!-- Breadcubs Area Start Here -->
        <div class="breadcrumbs-area">
            <h3>Class</h3>
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Admin")">Home</a>
                </li>
                <li>Update Class</li>
            </ul>
        </div>
        <!-- Breadcubs Area End Here -->
        <!-- Add New Teacher Area Start Here -->
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>Update Class</h3>
                    </div>
                </div>
                @using (Html.BeginForm("Update", "Class", FormMethod.Post))
                {
                    <form class="new-added-form">
                        <div class="row">
                            @Html.HiddenFor(m => m.ClassID)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xl-4 col-lg-6 col-12 form-group">
                                <label>Teacher *</label>
                                @Html.DropDownList("TeacherID", null, new { @class = "select2", placeholder = "Please select a teacher..." })
                                @Html.ValidationMessageFor(m => m.TeacherID, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xl-4 col-lg-6 col-12 form-group">
                                <label>Class Number *</label>
                                @Html.TextBoxFor(m => m.ClassNo, new { @class = "form-control", placeholder = "Write class number...", id = "classNo", @readonly = "true"})
                                @Html.ValidationMessageFor(m => m.ClassNo, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xl-4 col-lg-6 col-12 form-group">
                                <label>Room Type *</label>
                                @Html.DropDownList("RoomID", null, new { @class = "select2" })
                                @Html.ValidationMessageFor(m => m.RoomID, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 form-group mg-t-8">
                                <input type="submit" value="Update" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {}