@{
    ViewBag.Title = "Update Class";
    ViewBag.ViewToShow = "Update";
    ViewBag.ControllerToShow = "Class";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using SchoolDiarySystem.Models
@model Class

        <div class="breadcrumbs-area">
            <h3>@SchoolDiarySystem.Resources.Class.Update.UpdateTexts.UCForm</h3>
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Admin")">@SchoolDiarySystem.Resources.Class.Update.UpdateTexts.Home</a>
                </li>
                <li>@SchoolDiarySystem.Resources.Class.Update.UpdateTexts.UpdateC</li>
            </ul>
        </div>
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>@SchoolDiarySystem.Resources.Class.Update.UpdateTexts.UpdateC</h3>
                    </div>
                </div>
                @using (Html.BeginForm("Update", "Class", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    <form class="new-added-form">
                        <div class="row">
                            @Html.HiddenFor(m => m.ClassID)
                            <div class="col-xl-4 col-lg-6 col-12 form-group">
                                <label>@SchoolDiarySystem.Resources.Class.Update.UpdateTexts.SelTeach</label>
                                @Html.DropDownListFor(m => m.TeacherID, new SelectList(ViewBag.Teacher, "TeacherID", "FullName"), htmlAttributes: new { @class = "select2" })
                                @Html.ValidationMessageFor(m => m.TeacherID, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-xl-4 col-lg-6 col-12 form-group">
                                <label>@SchoolDiarySystem.Resources.Class.Update.UpdateTexts.ClassNo</label>
                                @Html.HiddenFor(m => m.ClassNo)
                                @Html.TextBoxFor(m => m.ClassNo, new { @class = "form-control", @placeholder = "Write class number...", disabled = "true", @type = "number", @maxlength = 1, autocomplete = "off" })
                                @Html.ValidationMessageFor(m => m.ClassNo, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-xl-4 col-lg-6 col-12 form-group">
                                <label>@SchoolDiarySystem.Resources.Class.Update.UpdateTexts.SelRoom</label>
                                @Html.DropDownListFor(m => m.RoomID, new SelectList(ViewBag.Room, "RoomID", "RoomType"), htmlAttributes: new { @class = "select2" })
                                @Html.ValidationMessageFor(m => m.RoomID, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 form-group mg-t-8">
                                <input type="submit" value="@SchoolDiarySystem.Resources.Class.Update.UpdateTexts.Update" class="btn-fill-lmd radius-4 text-light bg-violet-blue" />
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>


@section Scripts {}