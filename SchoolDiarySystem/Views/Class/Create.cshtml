@using SchoolDiarySystem.Models
@model Class
<div class="dashboard-page-one">
    <div class="dashboard-content-one">
        <!-- Breadcubs Area Start Here -->
        <div class="breadcrumbs-area">
            <h3>Student</h3>
            <ul>
                <li>
                    <a href="index-2.html">Home</a>
                </li>
                <li>Add New Student</li>
            </ul>
        </div>
        <!-- Breadcubs Area End Here -->
        <!-- Add New Teacher Area Start Here -->
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>Add New Student</h3>
                    </div>
                </div>
                @using (Html.BeginForm("Create", "Class", FormMethod.Post))
                {
                    <form class="new-added-form">
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label>Teacher *</label>
                                @Html.DropDownList("TeacherID", null, new { @class = "select2" })
                                @Html.ValidationMessageFor(m => m.TeacherID, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label>Class Number *</label>
                                @Html.TextBoxFor(m => m.ClassNo, new { @class = "form-control", placeholder = "First name...", id = "firstname", @type = "number", @maxlength = "1" })
                                @Html.ValidationMessageFor(m => m.ClassNo, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label>Room Type *</label>
                                @Html.DropDownList("RoomID", null, new { @class = "select2" })
                                @Html.ValidationMessageFor(m => m.RoomID, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 form-group mg-t-8">
                                <input type="submit" value="Create" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <!-- jquery-->
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <!-- Plugins js -->
    <script src="~/Content/js/plugins.js"></script>
    <!-- Popper js -->
    <script src="~/Content/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- Counterup Js -->
    <script src="~/Content/js/jquery.counterup.min.js"></script>
    <!-- Moment Js -->
    <script src="~/Content/js/moment.min.js"></script>
    <!-- Waypoints Js -->
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <!-- Scroll Up Js -->
    <script src="~/Content/js/jquery.scrollUp.min.js"></script>
    <!-- Full Calender Js -->
    <script src="~/Content/js/fullcalendar.min.js"></script>
    <!-- Chart Js -->
    <script src="~/Content/js/Chart.min.js"></script>
    <!-- Custom Js -->
    <script src="~/Content/js/main.js"></script>
}