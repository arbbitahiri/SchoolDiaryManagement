@{
    ViewBag.Title = "Change Password";
    ViewBag.ViewToShow = "ChangePassword";
    ViewBag.ControllerToShow = "User";
    Layout = "~/Views/Shared/_LayoutDirector.cshtml";
}
@using SchoolDiarySystem.Models
@model Users

<div class="breadcrumbs-area">
    <h3>@SchoolDiarySystem.Resources.User.ChangePassword.ChangePasswordTexts.ChPUForm</h3>
    <ul>
        <li>
            <a href="@Url.Action("Index", "Director")">@SchoolDiarySystem.Resources.Universal.UniversalTexts.Home</a>
        </li>
        <li>@SchoolDiarySystem.Resources.User.ChangePassword.ChangePasswordTexts.ChangePass</li>
    </ul>
</div>
<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>@SchoolDiarySystem.Resources.User.ChangePassword.ChangePasswordTexts.ChangePass</h3>
            </div>
        </div>
        @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            <form class="new-added-form">
                <div class="row">
                    <div class="col-xl-4 col-lg-4 col-12 form-group">
                        @Html.HiddenFor(m => m.UserID)
                        <label>@SchoolDiarySystem.Resources.User.ChangePassword.ChangePasswordTexts.Pass</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Type Password", id = "password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-xl-4 col-lg-4 col-12 form-group">
                        <label>@SchoolDiarySystem.Resources.User.ChangePassword.ChangePasswordTexts.ConfPass</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", id = "confirmPass" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 form-group mg-t-8">
                        <input type="submit" value="@SchoolDiarySystem.Resources.Universal.UniversalTexts.UpdateUpper" class="btn-fill-lmd radius-4 text-light bg-violet-blue" />
                    </div>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {}