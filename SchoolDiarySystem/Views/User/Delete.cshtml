@using SchoolDiarySystem.Models
@model Users

<div class="dashboard-page-one">
    <div class="dashboard-content-one">
        <!-- Breadcubs Area Start Here -->
        <div class="breadcrumbs-area">
            <h3>Teacher</h3>
            <ul>
                <li>
                    <a href="index-2.html">Home</a>
                </li>
                <li>Teacher Details</li>
            </ul>
        </div>
        <!-- Breadcubs Area End Here -->
        <!-- Student Table Area Start Here -->
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>Are you sure you want to delete this teacher?</h3>
                    </div>
                </div>
                <div class="single-info-details">
                    <div class="item-img">
                        <img src="~/Content/img/figure/teacher.jpg" alt="teacher">
                    </div>
                    <div class="item-content">
                        <div class="header-inline item-header">
                            @Html.Label(Model.FullName, new { @class = "text-dark-medium font-medium" })
                        </div>
                        <div class="info-table table-responsive">
                            <table class="table text-nowrap">
                                <tbody>
                                    @if (Model.RoleID == 1)
                                    {
                                        <tr>
                                            <td>Admin Name:</td>
                                            <td>@Html.Label(Model.FullName, new { @class = "font-medium text-dark-medium" })</td>
                                        </tr>
                                    }
                                    else if (Model.RoleID == 2)
                                    {
                                        <tr>
                                            <td>Teacher:</td>
                                            <td>@Html.Label(Model.Teacher.FullName, new { @class = "font-medium text-dark-medium" })</td>
                                        </tr>
                                    }
                                    else if (Model.RoleID == 4)
                                    {
                                        <tr>
                                            <td>Parent:</td>
                                            <td>@Html.Label(Model.Parent.FullName, new { @class = "font-medium text-dark-medium" })</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td>Username:</td>
                                        <td>@Html.Label(Model.Username, new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Expire Date:</td>
                                        <td>@Html.Label(Model.ExpiresDate.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Last Login Date:</td>
                                        <td>@Html.Label(Model.LastLoginDate.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Last Login Time:</td>
                                        <td>@Html.Label(Model.LastLoginTime.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    @if (Model.IsPasswordChanged != true)
                                    {
                                        <tr>
                                            <td class="font-medium text-dark-medium">Never changed password!</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>Password changed:</td>
                                            <td>@Html.Label(Model.LastPasswordChangeDate.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td>
                                            @using (Html.BeginForm("Update", "User", new { id = Model.ParentID }, FormMethod.Post))
                                            {
                                                <div class="col-12 form-group mg-t-8">
                                                    <input type="submit" value="Update" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @using (Html.BeginForm("Delete", "User", new { id = Model.ParentID }, FormMethod.Post))
                                            {
                                                <div class="col-12 form-group mg-t-8">
                                                    <input type="submit" value="Delete" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @using (Html.BeginForm("Index", "User", FormMethod.Post))
                                            {
                                                <div class="col-12 form-group mg-t-8">
                                                    <input type="submit" value="Back to List" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        @using (Html.BeginForm("Delete", "User", FormMethod.Post))
                        {
                            <div class="col-12 form-group mg-t-8">
                                <input type="submit" value="Delete" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {}