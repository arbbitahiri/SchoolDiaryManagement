@{
    ViewBag.Title = "Create User";
    ViewBag.ViewToShow = "CreateTeacher";
    ViewBag.ControllerToShow = "User";
    Layout = "~/Views/Shared/_LayoutDirector.cshtml";
}
@using SchoolDiarySystem.Models
@model Users

<div class="breadcrumbs-area">
    <h3>@SchoolDiarySystem.Resources.User.CreateTeacher.CreateTeacherTexts.CUTForm</h3>
    <ul>
        <li>
            <a href="@Url.Action("Index", "Director")">@SchoolDiarySystem.Resources.Universal.UniversalTexts.Home</a>
        </li>
        <li>@SchoolDiarySystem.Resources.User.CreateTeacher.CreateTeacherTexts.CreateUser1</li>
    </ul>
</div>
<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>@SchoolDiarySystem.Resources.User.CreateTeacher.CreateTeacherTexts.CreateUser1</h3>
            </div>
        </div>
        @using (Html.BeginForm("CreateTeacher", "User", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            <form class="new-added-form">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-12 form-group">
                        <label>@SchoolDiarySystem.Resources.User.CreateTeacher.CreateTeacherTexts.SelTeach</label>
                        @Html.DropDownListFor(m => m.TeacherID, new SelectList(ViewBag.Teacher, "TeacherID", "FullName"), htmlAttributes: new { @class = "select2" })
                        @Html.ValidationMessageFor(m => m.TeacherID, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-xl-6 col-lg-4 col-12 form-group">
                        <label>@SchoolDiarySystem.Resources.User.CreateTeacher.CreateTeacherTexts.ExpDate1</label>
                        @Html.TextBoxFor(m => m.ExpiresDate, new { @class = "form-control air-datepicker", placeholder = "dd/MMMM/yyyy", id = "expire", autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.ExpiresDate, "", new { @class = "text-danger" })
                        <i class="far fa-calendar-alt"></i>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-12 form-group">
                        <label>@SchoolDiarySystem.Resources.User.CreateTeacher.CreateTeacherTexts.Username1</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username", id = "username", autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-xl-4 col-lg-4 col-12 form-group">
                        <label>@SchoolDiarySystem.Resources.User.CreateTeacher.CreateTeacherTexts.Pass1</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Type Password", id = "password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-xl-4 col-lg-4 col-12 form-group">
                        <label>@SchoolDiarySystem.Resources.User.CreateTeacher.CreateTeacherTexts.ConfPass1</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", id = "confirmPass" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 form-group mg-t-8">
                        <input type="submit" value="@SchoolDiarySystem.Resources.Universal.UniversalTexts.CreateUpper" class="btn-fill-md radius-4 text-light bg-light-sea-green" />
                    </div>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {}