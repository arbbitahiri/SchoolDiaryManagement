
@{
    ViewBag.Title = "ParentDetails";
    Layout = "~/Views/Shared/_LayoutDirector.cshtml";
}
@using SchoolDiarySystem.Models
@model Users

<div class="dashboard-page-one">
    <div class="dashboard-content-one">
        <!-- Breadcubs Area Start Here -->
        <div class="breadcrumbs-area">
        </div>
        <!-- Breadcubs Area End Here -->
        <!-- Student Table Area Start Here -->
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>My Details</h3>
                    </div>
                </div>
                <div class="single-info-details">
                    <div class="item-img">
                        <img src="~/Content/img/figure/user.jpg" alt="user">
                    </div>
                    <div class="item-content">
                        <div class="header-inline item-header">
                            <div class="item-title">
                                <h3></h3>
                            </div>
                            <div class="header-elements">
                                <ul>
                                    <li><a href="#"><i class="fas fa-print"></i></a></li>
                                    <li><a href="#"><i class="fas fa-download"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="info-table table-responsive">
                            <table class="table text-nowrap">
                                <tbody>
                                    @if (Model.RoleID == 3)
                                    {
                                        <tr>
                                            <td>Name:</td>
                                            <td>@Html.Label(Model.FullName, new { @class = "font-medium text-dark-medium" })</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td>Username:</td>
                                        <td>@Html.Label(Model.Username, new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Expire Date:</td>
                                        <td>@Html.Label(Model.ExpiresDate.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Last Login Date:</td>
                                        <td>@Html.Label(Model.LastLoginDate.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    @if (Model.IsPasswordChanged != true)
                                    {
                                        <tr>
                                            <td class="font-medium text-dark-medium">Never changed password!</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>Password changed:</td>
                                            <td>@Html.Label(Model.LastPasswordChangeDate.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td>
                                            @using (Html.BeginForm("Update", "User", new { id = Model.ParentID }, FormMethod.Post))
                                            {
                                                <div class="col-12 form-group mg-t-8">
                                                    <input type="submit" value="Update" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/img/favicon.png">
    <!-- Normalize CSS -->
    <link rel="stylesheet" href="~/Content/css/normalize.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="~/Content/css/main.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/Content/css/all.min.css">
    <!-- Flaticon CSS -->
    <link rel="stylesheet" href="~/Content/fonts/flaticon.css">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/Content/css/animate.min.css">
    <!-- Select 2 CSS -->
    <link rel="stylesheet" href="~/Content/css/select2.min.css">
    <!-- Date Picker CSS -->
    <link rel="stylesheet" href="~/Content/css/datepicker.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/style.css">
    <!-- Modernize js -->
    <script src="js/modernizr-3.6.0.min.js"></script>

    <!-- jquery-->
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <!-- Plugins js -->
    <script src="~/Content/js/plugins.js"></script>
    <!-- Popper js -->
    <script src="~/Content/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- Counterup Js -->
    <script src="~/Content/js/jquery.counterup.min.js"></script>
    <!-- Moment Js -->
