@{
    ViewBag.Title = "Parent's Dashboard";
    ViewBag.ViewToShow = "Index";
    ViewBag.ControllerToShow = "MyKids";
    Layout = "~/Views/Shared/_LayoutParent.cshtml";
}
@using SchoolDiarySystem.Models
@model IEnumerable<Students>

        <div class="breadcrumbs-area">
            <h3>@SchoolDiarySystem.Resources.MyKids.Index.IndexTexts.ParentDash</h3>
            <ul>
                <li>
                    <a href="@Url.Action("Index", "MyKids")">@SchoolDiarySystem.Resources.MyKids.Index.IndexTexts.Home</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-5-xxxl col-12">
                <div class="card dashboard-card-twelve">
                    <div class="card-body">
                        <div class="heading-layout1">
                            <div class="item-title">
                                <h3>@SchoolDiarySystem.Resources.MyKids.Index.IndexTexts.MyKids</h3>
                            </div>
                        </div>
                        <div class="kids-details-wrap">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                <div class="col-12-xxxl col-xl-6 col-12">
                                    <div class="kids-details-box mb-5">
                                        <div class="item-img">
                                            @if (item.Gender != "Male")
                                            {
                                                <img src="~/Content/img/figure/student.png" alt="kids">
                                            }
                                            else
                                            {
                                                <img src="~/Content/img/figure/student1.png" alt="kids">
                                            }
                                        </div>
                                        <div class="item-content table-responsive">
                                            <table class="table text-nowrap">
                                                <tbody>
                                                    <tr>
                                                        <td>@SchoolDiarySystem.Resources.MyKids.Index.IndexTexts.Name</td>
                                                        <td>@Html.DisplayFor(m => item.FullName)</td>
                                                    </tr>
                                                    <tr>
                                                        <td>@SchoolDiarySystem.Resources.MyKids.Index.IndexTexts.Gender</td>
                                                        <td>@Html.DisplayFor(m => item.Gender)</td>
                                                    </tr>
                                                    <tr>
                                                        <td>@SchoolDiarySystem.Resources.MyKids.Index.IndexTexts.Class</td>
                                                        <td>@Html.DisplayFor(m => item.Class.ClassNo)</td>
                                                    </tr>
                                                    <tr>
                                                        <td>@SchoolDiarySystem.Resources.MyKids.Index.IndexTexts.DoB</td>
                                                        <td>@Html.DisplayFor(m => item.DayofBirth)</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                        }
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

@section Scripts {}