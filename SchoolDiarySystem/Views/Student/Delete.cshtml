@{
    ViewBag.Title = "Delete Student";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using SchoolDiarySystem.Models
@model Students

        <div class="breadcrumbs-area">
            <h3>Student</h3>
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Admin")">Home</a>
                </li>
                <li>Student Details</li>
            </ul>
        </div>
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>Are you sure you want to delete this student?</h3>
                    </div>
                </div>
                <div class="single-info-details" style="display: contents">
                    <div class="item-content">
                        <div class="info-table table-responsive">
                            <table class="table text-nowrap">
                                <tbody>
                                    <tr>
                                        <td>Name:</td>
                                        <td>@Html.Label(Model.FullName, new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Gender:</td>
                                        <td>@Html.Label(Model.Gender, new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Birthday:</td>
                                        <td>@Html.Label(Model.DayofBirth.ToString("dd MMMM yyyy"), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>E-mail:</td>
                                        <td>@Html.Label(Model.Class.ClassNo.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Phone Number:</td>
                                        <td>@Html.Label(Model.Parent.FullName, new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    @using (Html.BeginForm("Delete", "Student", FormMethod.Post))
                    {
                    <div class="col-12 form-group mg-t-8">
                        <input type="submit" value="Delete" class="btn-fill-md radius-4 text-light bg-orange-red" />
                    </div>
                    }
            </div>
        </div>
    </div>
</div>
@section Scripts {}