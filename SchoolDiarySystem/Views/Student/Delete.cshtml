@{
    ViewBag.Title = "Delete Student";
    ViewBag.ViewToShow = "Delete";
    ViewBag.ControllerToShow = "Student";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using SchoolDiarySystem.Models
@model Students

<div class="breadcrumbs-area">
    <h3>@SchoolDiarySystem.Resources.Student.Delete.DeleteTexts.DSForm</h3>
    <ul>
        <li>
            <a href="@Url.Action("Index", "Admin")">@SchoolDiarySystem.Resources.Universal.UniversalTexts.Home</a>
        </li>
        <li>@SchoolDiarySystem.Resources.Student.Delete.DeleteTexts.StudDet</li>
    </ul>
</div>
<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>@SchoolDiarySystem.Resources.Student.Delete.DeleteTexts.Sure</h3>
            </div>
        </div>
        <div class="single-info-details" style="display: contents">
            <div class="item-content">
                <div class="info-table table-responsive">
                    <table class="table text-nowrap">
                        <tbody>
                            <tr>
                                <td>@SchoolDiarySystem.Resources.Student.Delete.DeleteTexts.Name</td>
                                <td>@Html.Label(Model.FullName, new { @class = "font-medium text-dark-medium" })</td>
                            </tr>
                            <tr>
                                <td>@SchoolDiarySystem.Resources.Student.Delete.DeleteTexts.Gender</td>
                                <td>@Html.Label(Model.Gender, new { @class = "font-medium text-dark-medium" })</td>
                            </tr>
                            <tr>
                                <td>@SchoolDiarySystem.Resources.Student.Delete.DeleteTexts.DoB</td>
                                <td>@Html.Label(Model.DayofBirth.ToString("dd MMMM yyyy"), new { @class = "font-medium text-dark-medium" })</td>
                            </tr>
                            <tr>
                                <td>@SchoolDiarySystem.Resources.Student.Delete.DeleteTexts.Email</td>
                                <td>@Html.Label(Model.Class.ClassNo.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                            </tr>
                            <tr>
                                <td>@SchoolDiarySystem.Resources.Student.Delete.DeleteTexts.PhoneNo</td>
                                <td>@Html.Label(Model.Parent.FullName, new { @class = "font-medium text-dark-medium" })</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                @using (Html.BeginForm("Delete", "Student", FormMethod.Post))
                {
                    <div class="col-12 form-group mg-t-8">
                        <input type="submit" value="@SchoolDiarySystem.Resources.Universal.UniversalTexts.DeleteUpper" class="btn-fill-md radius-4 text-light bg-orange-red" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {}