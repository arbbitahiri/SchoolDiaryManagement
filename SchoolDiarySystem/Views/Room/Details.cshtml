@using SchoolDiarySystem.Models
@model Rooms

<div class="dashboard-page-one">
    <div class="dashboard-content-one">
        <!-- Breadcubs Area Start Here -->
        <div class="breadcrumbs-area">
            <h3>Room</h3>
            <ul>
                <li>
                    <a href="~/Views/Admin/Index.cshtml">Home</a>
                </li>
                <li>Room Details</li>
            </ul>
        </div>
        <!-- Breadcubs Area End Here -->
        <!-- Student Table Area Start Here -->
        <div class="card height-auto">
            <div class="card-body">
                <div class="single-info-details">
                    <div class="item-content">
                        <div class="header-inline item-header">
                            <h3>@Html.Label(Model.RoomType, new { @class = "text-dark-medium font-medium" })</h3>
                            <div class="header-elements">
                                <ul>
                                    <li><a href="#"><i class="fas fa-print"></i></a></li>
                                    <li><a href="#"><i class="fas fa-download"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="info-table table-responsive">
                            <table class="table text-nowrap">
                                <tbody>
                                    <tr>
                                        <td>Room Number:</td>
                                        <td>@Html.Label(Model.RoomNo.ToString(), new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>Room Type:</td>
                                        <td>@Html.Label(Model.RoomType, new { @class = "font-medium text-dark-medium" })</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @using (Html.BeginForm("Update", "Room", new { id = Model.RoomID }, FormMethod.Post))
                                            {
                                                <div class="col-12 form-group mg-t-8">
                                                    <input type="submit" value="Update" class="btn-fill-lmd radius-30 text-light bg-true-v" />
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @using (Html.BeginForm("Delete", "Room", new { id = Model.RoomID }, FormMethod.Post))
                                            {
                                                <div class="col-12 form-group mg-t-8">
                                                    <input type="submit" value="Delete" class="btn-fill-md radius-30 text-light bg-red" />
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @using (Html.BeginForm("Index", "Room", FormMethod.Post))
                                            {
                                                <div class="col-12 form-group mg-t-8">
                                                    <input type="button" value="Back to List" class="btn-fill-md radius-30 text-light bg-orange-peel" />
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .input-icons i {
            position: absolute;
        }

        .input-icons {
            width: 100%;
            margin-bottom: 10px;
        }
    </style>
    <!-- jquery-->
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <!-- Plugins js -->
    <script src="~/Content/js/plugins.js"></script>
    <!-- Popper js -->
    <script src="~/Content/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- Counterup Js -->
    <script src="~/Content/js/jquery.counterup.min.js"></script>
    <!-- Moment Js -->
    <script src="~/Content/js/moment.min.js"></script>
    <!-- Waypoints Js -->
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <!-- Scroll Up Js -->
    <script src="~/Content/js/jquery.scrollUp.min.js"></script>
    <!-- Full Calender Js -->
    <script src="~/Content/js/fullcalendar.min.js"></script>
    <!-- Chart Js -->
    <script src="~/Content/js/Chart.min.js"></script>
    <!-- Custom Js -->
    <script src="~/Content/js/main.js"></script>
}