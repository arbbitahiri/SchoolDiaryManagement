@using SchoolDiarySystem.Models
@model Subjects

<div class="dashboard-page-one">
    <div class="dashboard-content-one">
        <!-- Breadcubs Area Start Here -->
        <div class="breadcrumbs-area">
            <h3>Subject</h3>
            <ul>
                <li>
                    <a href="index-2.html">Home</a>
                </li>
                <li>Add New Subject</li>
            </ul>
        </div>
        <!-- Breadcubs Area End Here -->
        <!-- Add New Teacher Area Start Here -->
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>Add New Subject</h3>
                    </div>
                </div>
                @using (Html.BeginForm("Create", "Subject", FormMethod.Post))
                {
                    <form class="new-added-form">
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label>Subject Title *</label>
                                @Html.TextBoxFor(m => m.SubjectTitle, new { @class = "form-control", placeholder = "SubjectTitle...", id = "subjecttitle" })
                                @Html.ValidationMessageFor(m => m.SubjectTitle, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label>Book *</label>
                                @Html.TextBoxFor(m => m.Book, new { @class = "form-control", placeholder = "Book...", id = "book" })
                                @Html.ValidationMessageFor(m => m.Book, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label>Book Author *</label>
                                @Html.TextBoxFor(m => m.BookAuthor, new { @class = "form-control", placeholder = "BookAuthor...", id = "bookauthor" })
                                @Html.ValidationMessageFor(m => m.BookAuthor, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label>Teacher *</label>
                                @Html.DropDownListFor(m => m.TeacherID, Model.TeacherList, htmlAttributes: new { @class = "select2" })
                                @Html.ValidationMessageFor(m => m.TeacherID, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 form-group mg-t-8">
                                <input type="submit" value="Create" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {}