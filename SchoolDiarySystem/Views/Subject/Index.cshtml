@{
    ViewBag.Title = "Subject's List";
    ViewBag.ViewToShow = "Index";
    ViewBag.ControllerToShow = "Subject";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using SchoolDiarySystem.Models
@model IEnumerable<Subjects>

    <div class="breadcrumbs-area">
        <h3>@SchoolDiarySystem.Resources.Subject.Index.IndexTexts.SubjectList</h3>
        <ul>
            <li>
                <a href="@Url.Action("Index", "Admin")">@SchoolDiarySystem.Resources.Universal.UniversalTexts.Home</a>
            </li>
            <li>@SchoolDiarySystem.Resources.Subject.Index.IndexTexts.SubjectList</li>
        </ul>
    </div>
    <div class="col-4-xxxl col-12" style="display:contents">
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>@SchoolDiarySystem.Resources.Subject.Index.IndexTexts.CreateSub</h3>
                    </div>
                </div>
                <form class="new-added-form">
                    <div class="row">
                        <div class="col-12 form-group mg-t-8">
                            <p>
                                @Html.ActionLink(SchoolDiarySystem.Resources.Universal.UniversalTexts.CreateLower, "Create", "Subject", null, new { @class = "btn-fill-lg font-normal text-light gradient-pastel-green" })
                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card height-auto">
        <div class="card-body">
            <div class="heading-layout1">
                <div class="item-title">
                    <h3>@SchoolDiarySystem.Resources.Subject.Index.IndexTexts.SubjectList</h3>
                </div>
                <div class="dropdown">
                    <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                       aria-expanded="false">...</a>
                    <div class="dropdown-menu dropdown-menu-right text-center">
                        <a class="dropdown-item" data-toggle="modal" data-target="#right-slide-modal">
                            @SchoolDiarySystem.Resources.Universal.UniversalTexts.Help
                        </a>
                    </div>
                    <div class="ui-modal-box">
                        <div class="modal-box">
                            <div class="modal right-slide-modal fade" id="right-slide-modal" tabindex="-1"
                                 role="dialog" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">@SchoolDiarySystem.Resources.Universal.UniversalTexts.Help</h5>
                                            <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            @SchoolDiarySystem.Resources.Subject.Index.IndexTexts.SubjectHELP
                                            <img src="~/Content/img/Help/Subjects_List.png" alt="logo" />
                                            @SchoolDiarySystem.Resources.Student.Index.IndexTexts.StudentHELP_2
                                            <img src="~/Content/img/Help/List_Options.png" alt="logo" />
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="footer-btn bg-dark-low"
                                                    data-dismiss="modal">
                                                @SchoolDiarySystem.Resources.Universal.UniversalTexts.Close
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("Index", "Subject", FormMethod.Get))
            {
                <form class="mg-b-20">
                    <div class="row gutters-8">
                        <div class="col-4-xxxl col-xl-10 col-lg-3 col-12 form-group">
                            <input type="text" autocomplete="off" placeholder="@SchoolDiarySystem.Resources.Subject.Index.IndexTexts.SearchBy" name="searchString" class="form-control">
                        </div>
                        <div class="col-1-xxxl col-xl-2 col-lg-3 col-12 form-group">
                            <button type="submit" class="fw-btn-fill btn-gradient-yellow">@SchoolDiarySystem.Resources.Universal.UniversalTexts.Search</button>
                        </div>
                    </div>
                </form>
            }
            <div class="table-responsive">
                <table class="table display data-table text-nowrap">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@SchoolDiarySystem.Resources.Subject.Index.IndexTexts.Subject</th>
                            <th>@SchoolDiarySystem.Resources.Subject.Index.IndexTexts.Book</th>
                            <th>@SchoolDiarySystem.Resources.Subject.Index.IndexTexts.BookAuth</th>
                            <th>@SchoolDiarySystem.Resources.Subject.Index.IndexTexts.Teacher</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(m => item.SubjectTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Book)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.BookAuthor)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Teacher.FullName)
                                </td>

                                <td>
                                    <div class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="flaticon-more-button-of-three-dots"></span>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="@Url.Action("Delete", "Subject", new { id = item.SubjectID })"><i class="fas fa-times text-orange-red"></i>@SchoolDiarySystem.Resources.Universal.UniversalTexts.DeleteLower</a>
                                            <a class="dropdown-item" href="@Url.Action("Update", "Subject", new { id = item.SubjectID })"><i class="fas fa-cogs text-dark-pastel-green"></i>@SchoolDiarySystem.Resources.Universal.UniversalTexts.UpdateLower</a>
                                        </div>
                                        <div class="modal-box">
                                            <!-- Modal -->
                                            <div class="modal fade" id="standard-modal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Sure?</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">×</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to delete this subject?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="footer-btn bg-dark-low" data-dismiss="modal">No</button>
                                                            @using (Html.BeginForm("Delete", "Subject", new { id = item.SubjectID }, FormMethod.Post))
                                                            {
                                                                <input type="submit" value="Yes" class="footer-btn bg-linkedin" />
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <div class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <span class="flaticon-more-button-of-three-dots"></span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" data-toggle="modal" data-target="#standard-modal"><i class="fas fa-download"></i>@SchoolDiarySystem.Resources.Universal.UniversalTexts.DownloadExcel</a>
                                    </div>
                                    <div class="modal-box">
                                        <!-- Modal -->
                                        <div class="modal fade" id="standard-modal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">@SchoolDiarySystem.Resources.Universal.UniversalTexts.DownloadExcel</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        @SchoolDiarySystem.Resources.Universal.UniversalTexts.SureDownload
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="footer-btn bg-dark-low" data-dismiss="modal">@SchoolDiarySystem.Resources.Universal.UniversalTexts.No</button>
                                                        @using (Html.BeginForm("Export", "Student", FormMethod.Post))
                                                        {
                                                            <input type="submit" value="@SchoolDiarySystem.Resources.Universal.UniversalTexts.Download" class="footer-btn bg-linkedin" aria-label="Close" />
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

@section Scripts {}