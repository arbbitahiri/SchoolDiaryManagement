@using SchoolDiarySystem.Models
@{
    if (UserSession.GetUsers != null)
    {
        var role = UserSession.GetUsers.Role.RoleName;

        if (role == UserRoles.ADMIN)
        {
            Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
        }
        else if (role == UserRoles.TEACHER)
        {
            Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
        }
        else if (role == UserRoles.DIRECTOR)
        {
            Layout = "~/Views/Shared/_LayoutDirector.cshtml";
        }
        else if (role == UserRoles.PARENT)
        {
            Layout = "~/Views/Shared/_LayoutParent.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
}
